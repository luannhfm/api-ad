{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "@modules/*": ["src/modules/*"],
        "@plugins/*": ["src/plugins/*"],
        "@config/*": ["src/config/*"]
      }
    },
    "include": ["src/**/*"]
  }
  